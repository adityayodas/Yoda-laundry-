<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tugas.mobile.yodalaundry">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:theme="@style/NoActionBar">
        </activity>
        <activity android:name=".InputDataActivity"
            android:label="Input Pelanggan">
        </activity>
        <activity android:name=".ListPelangganActivity"
            android:label="List Pelanggan">
        </activity>
        <activity android:name=".ListCucianActivity"
            android:label="List Cucian">
        </activity>
        <activity android:name=".ListKirimActivity"
            android:label="List Pengiriman">
        </activity>
        <activity android:name=".DetailPelangganActivity"
            android:label="Detail Pelanggan">
        </activity>
        <activity android:name=".DetailCucianActivity"
            android:label="Detail Cucian">
        </activity>
        <activity android:name=".DetailKirimActivity"
            android:label="Detail Pengiriman">
        </activity>
    </application>

</manifest>